#include<sys/types.h>
#include<sys/stat.h>
#include<fcntl.h>
#include<string.h>
#include<stdlib.h>
#include<stdio.h>
#include<errno.h>
#include<unistd.h>
#include<dirent.h>
#define my_mask(mode)((mode) & ~S_IFMT)
// Permisos de ejecuciÃ³n para grupo y otros.
#define S_IFXGRPOTH 011
// Se define la macro con la regla para comprobar si tiene permiso x en grupo y otros.
#define regla_1(mode) ((((mode) & ~S_IFMT) & 011) == S_IFXGRPOTH)

void buscar_directorio(DIR * direct, char path_name[], int * reg, int *tamanio){
   struct stat atributos;
   struct direct *ed;
   DIR *direct_act;
   char cad[500];

   while((ed = readdir(direct)) != NULL){
      // Ignoramos el directorio actual y el superior
      if(strcmp(ed -> d_name, ".") != 0 && strcmp(ed -> d_name, "..") != 0){
         sprintf(cad, "%s%s", path_name, ed -> d_name);

         if(stat(cad, &atributos) < 0){
            printf("\nError al intentar acceder a los atributos de archivo");
            perror("\nError en lstat");
            exit(-1);
         }

         if(S_ISDIR(atributos.st_mode)){

            if((direct_act = opendir(cad)) == NULL)
               printf("\nError al abrir el directorio: [%s]\n", cad);

            else
               buscar_directorio(direct_act, cad, reg, tamanio);
         }
         else{
            printf("%s %ld \n", cad, atributos.st_ino);

            if(S_ISREG(atributos.st_mode)){

               if(regla_1(atributos.st_mode)){
                  (*reg)++;
                  (*tamanio) += (int) atributos.st_size;
               }
            }
         }
      }
   }
   closedir(direct);
}

int main (int argc, char *argv[]){
   DIR *direct;
   char path_name[500];
   int reg = 0;
   int tam = 0;

   if(argc == 2)
      strcpy(path_name, argv[1]);

   else
      strcpy(path_name, ".");

   if((direct = opendir(path_name)) == NULL){
      printf("\nError al abrir el directorio\n");
      exit(-1);
   }

   printf("Los inodos son: \n\n");

   buscar_directorio(direct, path_name, &reg, &tam);

   printf("Hay %d archivos regulares con permiso x para grupo y otros\n", reg);
   printf("El tamanio total ocupado por dichos archivos es %d bytes\n", tam);

   return 0;
}
